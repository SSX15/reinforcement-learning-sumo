    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "justMyCode": true
        },
        {
            "name": "Train",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/train.py",
            "cwd": "${workspaceFolder}/example",
            "args": [
                "--config_path",
                "./setting-files/ES_4_25.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "No_RL",
            "type": "python",
            "request": "launch",
            "program": "${workspaceRoot}/train.py",
            "cwd": "${workspaceFolder}/example",
            "args": [
                "--config_path",
                "./setting-files/NO-RL_4_25.json"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}